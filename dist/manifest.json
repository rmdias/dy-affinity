{
  "name": "DY-Afinnity",
  "version": "0.0.6",
  "manifest_version": 2,
  "description": "This show the page content info according to the user affinity to the itens",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": ["main.js"],
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://*.urbanoutfitters.com/new-arrivals",
        "https://*.urbanoutfitters.com/shop/*"
      ],
      "js": ["injectScript.js"]
    }
  ]
}